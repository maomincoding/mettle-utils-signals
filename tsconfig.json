{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "outDir": "lib",
    "lib": ["esnext", "dom"],
    "rootDir": "./src",
    "importHelpers": true,
    "moduleResolution": "Node",
    "strict": true,
    "strictNullChecks": false,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitThis": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
